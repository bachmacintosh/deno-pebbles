{
  "$schema": "https://deno.land/x/deno@v1.32.3/cli/schemas/config-file.v1.json",
  "imports": {
    "std/": "https://deno.land/std@0.174.0/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-sparse-arrays",
        "no-throw-literal",
        "no-undef",
        "single-var-declarator",
        "triple-slash-reference"
      ]
    }
  },
  "fmt": {
    "options": {
      "semiColons": true,
      "useTabs": false,
      "lineWidth": 120,
      "singleQuote": false,
      "proseWrap": "always"
    }
  },
  "tasks": {
    "gmail-senders": "deno run --allow-read=./ --allow-write=./senders.txt --allow-run=open,cmd,xdg-open --allow-net=0.0.0.0:3000,accounts.google.com,gmail.googleapis.com,oauth2.googleapis.com ./gmail-senders/main.ts",
    "google-oauth": "deno run --allow-read=./ --allow-run=open,cmd,xdg-open --allow-net=0.0.0.0:3000,accounts.google.com,api.github.com,oauth2.googleapis.com ./google-oauth/main.ts",
    "open-when-live": "deno run --allow-read=./ --allow-write=./.twitch.json --allow-run=open,cmd,xdg-open --allow-net=0.0.0.0:3000,id.twitch.tv,api.twitch.tv ./open-when-live/main.ts",
    "update": "deno cache --lock=deno.lock --lock-write ./deps.ts"
  }
}
